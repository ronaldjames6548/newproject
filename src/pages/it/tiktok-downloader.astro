---
import Container from "@components/container.astro";
import Hero from "@components/hero.astro";
import Layout from "@layouts/LayoutIT.astro";
import Features from "@components/tdfeatures.astro";
import Newsletter from "@components/tdnewsletter.astro";
import Testimonials from "@components/tdtestimonials.astro";
import Faq from "@components/faq.astro";

import { changeLanguage } from "i18next";
import { t, changeLanguage } from "i18next";
changeLanguage("it");

const title = `TikTokio - Scarica i video di TikTok in MP4 senza filigrana`;

---
import Container from "@components/container.astro";
import Hero from "@components/hero.astro";
import Layout from "@layouts/LayoutIT.astro";
import Features from "@components/features.astro";
import Newsletter from "@components/newsletter.astro";
import Testimonials from "@components/testimonials.astro";
import Faq from "@components/faq.astro";

import { changeLanguage } from "i18next";
import { t, changeLanguage } from "i18next";
changeLanguage("it");

const title = `Tiktok: scarica TikTok MP3 online`;
const description = `TikTok MP3 Downloader ti consente di scaricare musica e audio di TikTok in modo completamente gratuito con TikTokio.`;

---
<Layout title={title} description={description}>

<Container>
<Hero heading="Tiktokio - Downloader MP3 di TikTok" subheading="Scarica gratuitamente MP3 o suoni TikTok"/>
    <div class="content">
      <div class="relative p-4">
        <div class="max-w-screen-xl mx-auto">
          <div class="mt-3 rounded-b lg:rounded-b-none lg:rounded-r flex flex-col justify-between leading-normal">
                <Features />
                <Newsletter />
                <Testimonials />
                <Faq />

          </div>
       </div>
      </div>
</div>
</Container>
</Layout>

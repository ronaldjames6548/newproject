---
import Container from "@components/container.astro";
import Hero from "@components/hero.astro";
import Layout from "@layouts/LayoutIT.astro";
import Features from "@components/features.astro";
import Newsletter from "@components/newsletter.astro";
import Testimonials from "@components/testimonials.astro";
import Faq from "@components/faq.astro";

import { changeLanguage } from "i18next";
import { t, changeLanguage } from "i18next";
changeLanguage("it");

const title = `Tiktokio TikTok Story Downloader Scarica TikTok Story gratuitamente`;
const description = `La tua scelta per TikTokio è scaricare storie di TikTok senza filigrana in alta qualità. Il downloader di storie di TikTok è gratuito e senza limiti!`;

---
<Layout title={title} description={description}>
<Container>
		<Hero heading="Tiktokio - Downloader di storie di TikTok" subheading="Scarica la storia di TikTok, scarica la storia di TikTok, salva la storia di TikTok senza filigrana"/>

    <div class="content">
      <div class="relative p-4">
        <div class="max-w-screen-xl mx-auto">
          <div class="mt-3 rounded-b lg:rounded-b-none lg:rounded-r flex flex-col justify-between leading-normal">
                <Features />
                <Newsletter />
                <Testimonials />
                <Faq />

          </div>
       </div>
      </div>
</div>
</Container>
</Layout>

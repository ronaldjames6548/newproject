---
import Container from "@components/container.astro";
import Hero from "@components/hero.astro";
import Layout from "@layouts/Layout.astro";
import Features from "@components/features.astro";
import Newsletter from "@components/newsletter.astro";
import Testimonials from "@components/testimonials.astro";
import Faq from "@components/faq.astro";

import { changeLanguage } from "i18next";
import { t, changeLanguage } from "i18next";
changeLanguage("en");

const title = `Tiktokio - TikTok Slideshow Downloader`;
const description = `TikTok slideshow download with TikTokio Tiktok Downloader the TikTok slideshow photos all Without Watermark Online.`;


---
<Layout title={title} description={description}>
<Container>
		<Hero heading="Tiktokio - TikTok Slideshow Downloader" subheading="Download TikTok Photos Slideshow and images without watermarks"/>
    <div class="content">
      <div class="relative p-4">
        <div class="max-w-screen-xl mx-auto">
          <div class="mt-3 rounded-b lg:rounded-b-none lg:rounded-r flex flex-col justify-between leading-normal">
                <Features />
                <Newsletter />
                <Testimonials />
                <Faq />

          </div>
       </div>
      </div>
</div>
</Container>
</Layout>
